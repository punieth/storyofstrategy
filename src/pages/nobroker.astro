---
import Layout from "@layouts/Default.astro";
import NoBrokerApp from "@components/nobroker/App";
import "@components/nobroker/index.css";
import "@components/razorpay/styles/globals.css";
---

<Layout
  title="NoBroker Prototype"
  description="Interactive prototype showcasing the NoBroker owner experience"
  classList="bg-background text-foreground"
>
  <main class="flex flex-1 items-center justify-center py-12 px-4 md:py-16">
    <div class="w-full flex justify-center">
      <div class="nb-shell nobroker-page-shell">
        <div class="nb-shell-inner">
          <div
            class="nb-theme w-full h-full rounded-3xl border border-border bg-background shadow-xl overflow-hidden"
            data-embedded="true"
          >
            <NoBrokerApp client:only="react" basename="/nobroker" />
          </div>
        </div>
      </div>
    </div>
  </main>

  <style>
    .nobroker-page-shell {
      --nb-scale-base: 1;
      --nb-scale: 1;
      width: var(--nb-shell-width);
      max-width: var(--nb-shell-width);
    }
  </style>
</Layout>

---
interface Step { label: string; note?: string }
interface Props { steps: Step[] }
const { steps } = Astro.props as Props;
---
<section class="ns">
  <span class="kicker">Next steps (2 weeks)</span>
  <div class="lane">
    {steps.map((s)=>(
      <div class="node">
        <div class="lbl">{s.label}</div>
        {s.note && <div class="nt">{s.note}</div>}
      </div>
    ))}
  </div>
</section>

<style>
.kicker{ display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;text-transform:uppercase;letter-spacing:.06em; }
.lane{ display:grid; gap:12px; grid-template-columns:1fr; margin-top:.5rem; }
@media (min-width:768px){ .lane{ grid-template-columns:repeat(3,1fr); } }
.node{ background:#fff; border:4px solid #000; border-radius:12px; padding:.75rem; box-shadow:5px 5px 0 #000; }
.lbl{ font-weight:800; }
.nt{ margin-top:.25rem; color:#222; opacity:.85; }
</style>
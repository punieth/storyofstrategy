---
interface Props { items: string[]; tone?: "gray"|"neutral" }
const { items, tone="gray" } = Astro.props as Props;
const tint = tone==="gray" ? "#f3f4f6" : "#fff";
---
<section class="nb" style={`--tint:${tint}`}>
  <span class="kicker">Assumptions</span>
  <ul class="list">
    {items.map((it)=> <li>{it}</li>)}
  </ul>
</section>

<style>
.nb{ background:var(--tint); border:4px solid #000; border-radius:12px; padding:1rem; box-shadow:5px 5px 0 #000; }
.kicker{ display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;text-transform:uppercase;letter-spacing:.06em; }
.list{ margin:.5rem 0 0; padding-left:1rem; line-height:1.6; }
</style>
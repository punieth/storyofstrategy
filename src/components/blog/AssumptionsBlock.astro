---
interface Props { items: string[]; tone?: "gray"|"neutral"; elev?: "none"|"sm"; kicker?: string; }
const { items, tone="gray", elev="none", kicker="Assumptions" } = Astro.props as Props;
const tint = tone==="gray" ? "#f3f4f6" : "#fff";
---
<section class={`nb-assume elev-${elev}`} style={`--tint:${tint}`}>
  <span class="nb-kicker">{kicker}</span>
  <ul class="nb-list">
    {items.map((it)=> <li>{it}</li>)}
  </ul>
</section>

<style>
.nb-assume{ background:var(--tint); border:4px solid #000; border-radius:12px; padding:1rem; position:relative; }
.nb-kicker{
  position:absolute; top:-.6rem; left:1rem;
  display:inline-block; background:#000; color:#fff; border:2px solid #000;
  padding:2px 8px; font-size:.7rem; text-transform:uppercase; letter-spacing:.06em;
}
.nb-list{ margin:.5rem 0 0; padding-left:1rem; line-height:1.6; }
.elev-sm{ box-shadow:6px 6px 0 #000; }
.elev-none{ box-shadow:none; }
</style>
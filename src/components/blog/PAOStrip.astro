---
type Tone = "neutral"|"lime"|"blue"|"violet"|"peach";
type Elev = "none"|"sm";
interface Props {
  problem: string; approach: string; outcome: string;
  tone?: Tone; label?: string; elev?: Elev;
}
const { problem, approach, outcome, tone="neutral", label="PAO", elev="none" } = Astro.props as Props;
const tints: Record<Tone,string> = { neutral:"#fff", lime:"#f5ffcf", blue:"#e7f2ff", violet:"#f3e8ff", peach:"#fff1e7" };
---
<section class="nb-strip">
  <div class="nb-head"><span class="nb-kicker">{label}</span></div>
  <div class="nb-grid">
    <div class={`nb-cell elev-${elev}`} style={`--bg:${tints[tone]}`}><div class="nb-title">Problem</div><p>{problem}</p></div>
    <div class={`nb-cell elev-${elev}`} style={`--bg:${tints[tone]}`}><div class="nb-title">Approach</div><p>{approach}</p></div>
    <div class={`nb-cell elev-${elev}`} style={`--bg:${tints[tone]}`}><div class="nb-title">Outcome</div><p>{outcome}</p></div>
  </div>
</section>

<style>
.nb-head{margin-bottom:.5rem;}
.nb-kicker{display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;letter-spacing:.06em;text-transform:uppercase;}
.nb-grid{display:grid;gap:12px;grid-template-columns:1fr;}
@media (min-width:768px){.nb-grid{grid-template-columns:repeat(3,1fr);}}
.nb-cell{background:var(--bg);border:4px solid #000;border-radius:12px;padding:1rem;}
.nb-title{font-weight:800;text-transform:uppercase;margin-bottom:.25rem;}
p{margin:0;}
.elev-sm{box-shadow:6px 6px 0 #000;}
.elev-none{box-shadow:none;}
</style>
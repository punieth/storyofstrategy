---
interface Props {
  problem: string;
  approach: string;
  outcome: string;
  tone?: "neutral" | "lime" | "blue" | "violet" | "peach"; // background tint
  label?: string; // optional strip label (defaults to PAO)
}
const { problem, approach, outcome, tone = "neutral", label = "PAO" } = Astro.props;

const tints = {
  neutral: "#fff",
  lime:    "#f5ffcf",
  blue:    "#e7f2ff",
  violet:  "#f3e8ff",
  peach:   "#fff1e7",
} as const;
---

<section class="nb-strip">
  <div class="nb-strip-head">
    <span class="kicker">{label}</span>
  </div>
  <div class="grid">
    <div class="cell" style={`--bg:${tints[tone]}`}><div class="title">Problem</div><p>{problem}</p></div>
    <div class="cell" style={`--bg:${tints[tone]}`}><div class="title">Approach</div><p>{approach}</p></div>
    <div class="cell" style={`--bg:${tints[tone]}`}><div class="title">Outcome</div><p>{outcome}</p></div>
  </div>
</section>

<style>
  .nb-strip-head{ margin-bottom:.5rem; }
  .kicker{
    display:inline-block; background:#000; color:#fff; border:2px solid #000;
    padding:2px 8px; font-size:.7rem; text-transform:uppercase; letter-spacing:.06em;
  }
  .grid{
    display:grid; gap:12px;
    grid-template-columns: 1fr;
  }
  @media (min-width:768px){ .grid{ grid-template-columns: repeat(3, 1fr); } }

  .cell{
    background:var(--bg); border:4px solid #000; border-radius:12px;
    padding:1rem; box-shadow:6px 6px 0 #000;
  }
  .title{ font-weight:800; text-transform:uppercase; margin-bottom:.25rem; }
  p{ margin:0; }
</style>
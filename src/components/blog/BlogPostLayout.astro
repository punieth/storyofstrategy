---
interface Props {
  title: string;
  pubDate: Date;
  author: string;
}

const { title, pubDate, author } = Astro.props;
---

<article class="prose-slate w-full poppins">
  <div class="relative">
    <div
      class="pointer-events-none hidden sm:block absolute -top-7 -left-7 h-16 w-16 rounded-xl border-2 border-black/80 bg-[#faff72] shadow-[6px_6px_0_0_#000] -rotate-3"
      aria-hidden="true"
    ></div>
    <div class="relative z-10 border border-black/70 sm:border-2 rounded-xl sm:rounded-2xl px-5 py-6 sm:p-8 shadow-none sm:shadow-[8px_8px_0_0_#000] bg-white">
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 sm:mb-4 leading-tight">{title}</h1>
      <p class="text-slate text-xs sm:text-sm md:text-base mb-6 sm:mb-8">
        Published on {pubDate.toLocaleDateString('en-us', { year: 'numeric', month: 'short', day: 'numeric' })} by {author}
      </p>
      <slot />
    </div>
  </div>
</article>

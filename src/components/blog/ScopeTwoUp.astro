---
interface Props { mvp: string[]; nonGoals: string[]; }
const { mvp, nonGoals } = Astro.props as Props;
---
<section class="grid">
  <div class="cell">
    <span class="kicker">MVP</span>
    <ul class="list">{mvp.map((x)=> <li>{x}</li>)}</ul>
  </div>
  <div class="cell">
    <span class="kicker">Non-Goals</span>
    <ul class="list">{nonGoals.map((x)=> <li>{x}</li>)}</ul>
  </div>
</section>

<style>
.grid{ display:grid; gap:12px; grid-template-columns: 1fr; }
@media (min-width:768px){ .grid{ grid-template-columns: 1fr 1fr; } }
.cell{ background:#fff; border:4px solid #000; border-radius:12px; padding:1rem; box-shadow:6px 6px 0 #000; }
.kicker{ display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;text-transform:uppercase;letter-spacing:.06em; }
.list{ margin:.5rem 0 0; padding-left:1rem; line-height:1.6; }
</style>
---
type Elev = "none"|"sm";
interface Props { mvp: string[]; nonGoals: string[]; elev?: Elev; }
const { mvp, nonGoals, elev="none" } = Astro.props as Props;
---
<section class={`nb-matrix elev-${elev}`}>
  <div class="nb-cell">
    <span class="nb-kicker">MVP</span>
    <ul class="nb-list">{mvp.map((x)=><li>{x}</li>)}</ul>
  </div>
  <div class="nb-cell">
    <span class="nb-kicker">Non-Goals</span>
    <ul class="nb-list">{nonGoals.map((x)=><li>{x}</li>)}</ul>
  </div>
</section>

<style>
.nb-matrix{display:grid;gap:12px;grid-template-columns:1fr;}
@media (min-width:768px){.nb-matrix{grid-template-columns:1fr 1fr;}}
.nb-cell{background:#fff;border:4px solid #000;border-radius:12px;padding:1rem;}
.nb-kicker{display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;letter-spacing:.06em;text-transform:uppercase;}
.nb-list{margin:.5rem 0 0;padding-left:1rem;line-height:1.6;}
.elev-sm .nb-cell{box-shadow:6px 6px 0 #000;}
</style>
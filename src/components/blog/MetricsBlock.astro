---
interface Props {
  primaryLabel: string; primaryTarget: string;
  guardrail?: string; leading?: string[];
  tone?: "blue"|"neutral";
}
const { primaryLabel, primaryTarget, guardrail="", leading=[], tone="blue" } = Astro.props as Props;
const tint = tone==="blue" ? "#e7f2ff" : "#fff";
---
<section class="nb" style={`--tint:${tint}`}>
  <span class="kicker">Metrics</span>
  <div class="grid">
    <div class="primary">
      <div class="lab">{primaryLabel}</div>
      <div class="val">{primaryTarget}</div>
    </div>
    <div class="side">
      {guardrail && <div class="item"><b>Guardrail:</b> {guardrail}</div>}
      {leading.length>0 && (
        <div class="item"><b>Leading:</b>
          <ul>{leading.map((l)=><li>{l}</li>)}</ul>
        </div>
      )}
    </div>
  </div>
</section>

<style>
.nb{ background:var(--tint); border:4px solid #000; border-radius:12px; padding:1rem; box-shadow:6px 6px 0 #000; }
.kicker{ display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;text-transform:uppercase;letter-spacing:.06em; }
.grid{ display:grid; gap:12px; grid-template-columns: 1fr; margin-top:.5rem; }
@media (min-width:768px){ .grid{ grid-template-columns: 1fr 1fr; } }
.primary{ background:#fff; border:4px solid #000; border-radius:12px; padding:.75rem; box-shadow:5px 5px 0 #000; }
.lab{ font-weight:700; }
.val{ font-weight:800; font-size: clamp(1.3rem, 2.6vw, 1.8rem); }
.side .item{ background:#fff; border:3px solid #000; border-radius:10px; padding:.5rem .75rem; box-shadow:4px 4px 0 #000; }
.side .item + .item{ margin-top:.5rem; }
.side ul{ padding-left:1.1rem; margin-top:.25rem; }
</style>
---
type Elev = "none"|"sm";
interface Risk { title: string; note: string }
interface Props { items: Risk[]; elev?: Elev; }
const { items, elev="none" } = Astro.props as Props;
---
<section class={`nb-risks elev-${elev}`}>
  <span class="nb-kicker">Risks & Trade-offs</span>
  <div class="nb-grid">
    {items.map((r)=>(
      <div class="nb-card">
        <div class="nb-ttl">{r.title}</div>
        <div class="nb-nt">{r.note}</div>
      </div>
    ))}
  </div>
</section>

<style>
.nb-risks{margin-top:.5rem;}
.nb-kicker{display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;text-transform:uppercase;letter-spacing:.06em;}
.nb-grid{display:grid;gap:12px;grid-template-columns:1fr;}
@media (min-width:768px){.nb-grid{grid-template-columns:repeat(3,1fr);}}
.nb-card{background:#fff;border:4px solid #000;border-radius:12px;padding:.75rem;}
.nb-ttl{font-weight:800;margin-bottom:.25rem;}
.nb-nt{line-height:1.55;}
.elev-sm .nb-card{box-shadow:6px 6px 0 #000;}
</style>
---
interface Props { text: string; tone?: "peach"|"lime"|"blue"|"violet"|"neutral" }
const { text, tone="neutral" } = Astro.props as Props;
const tint = { peach:"#fff1e7", lime:"#f5ffcf", blue:"#e7f2ff", violet:"#f3e8ff", neutral:"#fff" }[tone];
---
<section class="nb" style={`--tint:${tint}`}>
  <span class="kicker">Context</span>
  <p class="copy">{text}</p>
</section>

<style>
.nb{ background:var(--tint); border:4px solid #000; border-radius:12px; padding:1rem; box-shadow:6px 6px 0 #000; }
.kicker{ display:inline-block; background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;letter-spacing:.06em;text-transform:uppercase; }
.copy{ margin:.5rem 0 0; line-height:1.65; }
</style>
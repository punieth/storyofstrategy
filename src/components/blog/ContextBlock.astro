---
type Tone = "peach"|"lime"|"blue"|"violet"|"neutral";
type Elev = "none"|"sm";

interface Props { text: string; tone?: Tone; elev?: Elev; }
const { text, tone="neutral", elev="none" } = Astro.props as Props;

const tints: Record<Tone,string> = {
  peach:"#fff1e7", lime:"#f5ffcf", blue:"#e7f2ff", violet:"#f3e8ff", neutral:"#fff"
};
---
<section class={`nb nb-context elev-${elev}`} style={`--tint:${tints[tone]}`}>
  <span class="nb-kicker">Context</span>
  <p class="nb-copy">{text}</p>
</section>

<style>
.nb{background:var(--tint);border:4px solid #000;border-radius:12px;padding:1rem;}
.nb-kicker{display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;letter-spacing:.06em;text-transform:uppercase;}
.nb-copy{margin:.5rem 0 0;line-height:1.65;}
.elev-sm{box-shadow:6px 6px 0 #000;}
.elev-none{box-shadow:none;}
</style>
---
type Tone = "lime"|"neutral";
type Elev = "none"|"sm";

interface Props { title?: string; text: string; tone?: Tone; elev?: Elev; }
const { title="Solution", text, tone="neutral", elev="none" } = Astro.props as Props;
const tint = tone==="lime" ? "#f5ffcf" : "#fff";
---
<section class={`nb nb-solution elev-${elev}`} style={`--tint:${tint}`}>
  <span class="nb-kicker">{title}</span>
  <p class="nb-copy">{text}</p>
</section>

<style>
.nb{background:var(--tint);border:4px solid #000;border-radius:12px;padding:1rem;}
.nb-kicker{display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;text-transform:uppercase;letter-spacing:.06em;}
.nb-copy{margin:.5rem 0 0;line-height:1.65;}
.elev-sm{box-shadow:6px 6px 0 #000;}
.elev-none{box-shadow:none;}
</style>
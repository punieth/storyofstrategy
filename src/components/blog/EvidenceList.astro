---
type Elev = "none"|"sm";
type Tone = "blue"|"neutral";

interface Item { label: string; note?: string }
interface Props { items: Item[]; tone?: Tone; elev?: Elev; }

const { items, tone="neutral", elev="none" } = Astro.props as Props;
const tint = tone==="blue" ? "#e7f2ff" : "#fff";
---
<section class={`nb-eg elev-${elev}`}>
  <span class="nb-kicker">Evidence</span>
  <div class="nb-grid">
    {items.map((it)=>(
      <div class="nb-card elev-none" style={`--tint:${tint}`}>
        <div class="nb-lbl">{it.label}</div>
        {it.note && <div class="nb-note">{it.note}</div>}
      </div>
    ))}
  </div>
</section>

<style>
.nb-eg{margin-top:.5rem;}
.nb-kicker{display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;letter-spacing:.06em;text-transform:uppercase;}
.nb-grid{display:grid;gap:12px;grid-template-columns:1fr;margin-top:.5rem;}
@media (min-width:768px){.nb-grid{grid-template-columns:repeat(3,1fr);}}
.nb-card{background:var(--tint);border:4px solid #000;border-radius:12px;padding:.75rem;}
.nb-lbl{font-weight:700;}
.nb-note{margin-top:.25rem;color:#222;opacity:.85;font-size:.95rem;}
.elev-sm .nb-card{box-shadow:6px 6px 0 #000;}
.elev-none .nb-card{box-shadow:none;}
</style>
---
interface Item { label: string; note?: string }
interface Props { items: Item[]; tone?: "blue"|"neutral" }
const { items, tone="neutral" } = Astro.props as Props;
const tint = tone==="blue" ? "#e7f2ff" : "#fff";
---
<section class="wrap">
  <span class="kicker">Evidence</span>
  <div class="grid">
    {items.map((it)=>(
      <div class="card" style={`--tint:${tint}`}>
        <div class="lbl">{it.label}</div>
        {it.note && <div class="note">{it.note}</div>}
      </div>
    ))}
  </div>
</section>

<style>
.wrap{ margin-top:.5rem }
.kicker{ display:inline-block;background:#000;color:#fff;border:2px solid #000;padding:2px 8px;font-size:.7rem;letter-spacing:.06em;text-transform:uppercase; }
.grid{ display:grid; gap:12px; grid-template-columns: 1fr; margin-top:.5rem; }
@media (min-width:768px){ .grid{ grid-template-columns:repeat(3,1fr); } }
.card{ background:var(--tint); border:4px solid #000; border-radius:12px; padding:.75rem; box-shadow:5px 5px 0 #000; }
.lbl{ font-weight:700; }
.note{ margin-top:.25rem; color:#222; opacity:.85; font-size:.95rem; }
</style>
---
import { Button } from "@eliancodes/brutal-ui";
interface Props {
  pageTitle?: string;
}

const navigationItems = [
  { name: "Home", url: "/" },
  { name: "The Lab", url: "/blog/" },
];

const socialIcons = [
  {
    name: "Twitter",
    url: "https://www.twitter.com/xPunith",
    icon: "i-uil-twitter",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/punith-rathnakar/",
    icon: "i-uil-linkedin",
  },
];

const { pageTitle } = Astro.props;
const currentPath = Astro.url?.pathname ?? "/";
const filteredNavigationItems = navigationItems.filter((item) => {
  if (item.url === "/" && currentPath === "/") {
    return false;
  }
  return true;
});
---

<header
  data-site-header
  class="bg-[#f5ff85] border-4 border-black shadow-[2px_2px_0_2px_#000] md:shadow-[4px_4px_0_4px_#000] sticky top-0 z-50 transition-transform duration-200 will-change-transform"
>
  {pageTitle && <h1 class="hidden">{pageTitle}</h1>}

  {/* Desktop Layout */}
  <div class="hidden md:flex justify-between p-6 items-center">
    <div class="flex flex-col items-start gap-1">
      <span class="inline-flex items-center gap-1">
        <span
          class="inline-flex items-center gap-1 px-2 py-1 text-xs font-black uppercase tracking-wider text-black bg-[#ffd93d] border-2 border-black shadow-[3px_3px_0_0_#000] rotate-[-2deg]"
        >
          <span class="block h-2 w-2 rounded-full bg-[#ff3366] animate-pulse"
          ></span>
          Think
        </span>
        <span class="text-2xl font-black">→</span>
        <span
          class="inline-flex items-center px-2 py-1 text-xs font-black uppercase tracking-wider text-white bg-[#6c5ce7] border-2 border-black shadow-[3px_3px_0_0_#000] rotate-[2deg]"
        >
          Build
        </span>
      </span>
      <a
        href="/"
        title="Back to Home"
        class="group inline-flex items-center gap-1"
      >
        <span
          class="inline-block bg-white px-2 py-1 border-4 border-black shadow-[4px_4px_0_0_#000] group-hover:shadow-[2px_2px_0_0_#000] group-hover:translate-x-[2px] group-hover:translate-y-[2px] transition-all duration-150"
        >
          <span class="righteous text-4xl text-black">Story</span>
        </span>
        <span
          class="inline-block bg-[#ff6b6b] px-2 py-1 border-4 border-black shadow-[4px_4px_0_0_#000] group-hover:shadow-[2px_2px_0_0_#000] group-hover:translate-x-[2px] group-hover:translate-y-[2px] transition-all duration-150"
        >
          <span class="righteous text-4xl text-black">of</span>
        </span>
        <span
          class="inline-block bg-[#4ecdc4] px-2 py-1 border-4 border-black shadow-[4px_4px_0_0_#000] group-hover:shadow-[2px_2px_0_0_#000] group-hover:translate-x-[2px] group-hover:translate-y-[2px] transition-all duration-150"
        >
          <span class="righteous text-4xl text-black">Strategy</span>
        </span>
      </a>
    </div>
    <nav>
      <h2 class="hidden">Navigation</h2>
      <ul class="flex items-center gap-4 poppins">
        {
          filteredNavigationItems.map((item) => (
            <li>
              <Button href={item.url} title={`Go to ${item.name}`}>
                {item.name}
              </Button>
            </li>
          ))
        }
        {
          socialIcons.map((item) => (
            <li class="bg-white text-green border-black border-2 card-shadow hover:bg-light-green transition-colors ease-in-out duration-200">
              <a
                href={item.url}
                class="p-2 block"
                target="_blank"
                title={`See @ElianCodes on ${item.name}`}
              >
                <div class:list={[item.icon, "w-6 h-6"]} />
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>

  {/* Mobile Layout */}
  <nav class="md:hidden flex justify-between items-center p-4">
    <div class="flex flex-col items-start gap-1 flex-1 min-w-0">
      <span class="inline-flex items-center gap-0.5">
        <span
          class="inline-flex items-center gap-0.5 px-1.5 py-0.5 text-[9px] font-black uppercase tracking-wider text-black bg-[#ffd93d] border border-black shadow-[2px_2px_0_0_#000] rotate-[-2deg]"
        >
          <span
            class="block h-1.5 w-1.5 rounded-full bg-[#ff3366] animate-pulse"
          ></span>
          Think
        </span>
        <span class="text-sm font-black">→</span>
        <span
          class="inline-flex items-center px-1.5 py-0.5 text-[9px] font-black uppercase tracking-wider text-white bg-[#6c5ce7] border border-black shadow-[2px_2px_0_0_#000] rotate-[2deg]"
        >
          Build
        </span>
      </span>
      <a
        href="/"
        title="Back to Home"
        class="group inline-flex items-center gap-0.5"
      >
        <span
          class="inline-block bg-white px-1 py-0.5 border-2 border-black shadow-[2px_2px_0_0_#000] group-active:shadow-none group-active:translate-x-[2px] group-active:translate-y-[2px] transition-all duration-150"
        >
          <span class="righteous text-base text-black">Story</span>
        </span>
        <span
          class="inline-block bg-[#ff6b6b] px-1 py-0.5 border-2 border-black shadow-[2px_2px_0_0_#000] group-active:shadow-none group-active:translate-x-[2px] group-active:translate-y-[2px] transition-all duration-150"
        >
          <span class="righteous text-base text-black">of</span>
        </span>
        <span
          class="inline-block bg-[#4ecdc4] px-1 py-0.5 border-2 border-black shadow-[2px_2px_0_0_#000] group-active:shadow-none group-active:translate-x-[2px] group-active:translate-y-[2px] transition-all duration-150"
        >
          <span class="righteous text-base text-black">Strategy</span>
        </span>
      </a>
    </div>
    <ul class="flex gap-2 items-center poppins flex-shrink-0">
      <li
        class="bg-white text-green border-black border-2 card-shadow hover:bg-light-green active:bg-light-green transition-all duration-200"
      >
        <a href="/blog/" class="p-1 px-2 block text-xs" title="Go to The Lab"
          >The Lab</a
        >
      </li>
      {
        socialIcons.map((item) => (
          <li class="bg-white text-green border-black border-2 card-shadow hover:bg-light-green active:bg-light-green transition-all duration-200">
            <a
              href={item.url}
              class="p-1 block"
              target="_blank"
              title={`See @ElianCodes on ${item.name}`}
            >
              <div class:list={[item.icon, "w-4 h-4"]} />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<script is:inline>
  (() => {
    if (typeof window === "undefined") {
      return;
    }

    const initHeaderScroll = () => {
      const body = document.body;
      if (!body || !body.classList.contains("blog-post-layout")) {
        return;
      }

      const header = document.querySelector("[data-site-header]");
      if (!header) {
        return;
      }

      let lastScroll = window.scrollY;
      const headerHeight = header.getBoundingClientRect().height;
      const threshold = 8;

      const handleScroll = () => {
        if (window.matchMedia("(min-width: 768px)").matches) {
          header.classList.remove("is-hidden");
          lastScroll = window.scrollY;
          return;
        }

        const currentScroll = window.scrollY;
        const delta = currentScroll - lastScroll;

        if (currentScroll > headerHeight && delta > threshold) {
          header.classList.add("is-hidden");
        } else if (delta < -threshold || currentScroll <= headerHeight) {
          header.classList.remove("is-hidden");
        }

        lastScroll = currentScroll;
      };

      window.addEventListener("scroll", handleScroll, { passive: true });
      window.addEventListener(
        "resize",
        () => {
          if (window.matchMedia("(min-width: 768px)").matches) {
            header.classList.remove("is-hidden");
          }
        },
        { passive: true }
      );
    };

    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initHeaderScroll, {
        once: true,
      });
    } else {
      initHeaderScroll();
    }
  })();
</script>

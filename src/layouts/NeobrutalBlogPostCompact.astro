---
import NeobrutalBlogPostLayoutCompact from '@components/blog/NeobrutalBlogPostLayoutCompact.astro';
import LocalFont from '@components/generic/LocalFont.astro';

interface Props {
  author: string;
  pubDate: Date;
  headings: unknown;
  description: string;
  title: string;
}

const { author, pubDate, headings, description, title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <LocalFont />
  <style>
    * {
      box-sizing: border-box;
    }
    body {
      font-family: 'Outfit', 'Inter', 'Manrope', 'Segoe UI', system-ui, -apple-system, sans-serif;
      background-color: #FDFCFB;
      background-image: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23000000' fill-opacity='0.05' fill-rule='evenodd'%3E%3Cpath d='M0 40L40 0H20L0 20M40 40V20L20 40'/%3E%3C/g%3E%3C/svg%3E");
    }
  </style>
</head>
<body>
  <main class="px-0 sm:px-0 md:px-0 pt-0 pb-0 sm:pt-0 sm:pb-0 md:pt-0 md:pb-0 mx-auto w-full max-w-[90rem]">
    <NeobrutalBlogPostLayoutCompact {pubDate} {author} {title}>
      <slot />
    </NeobrutalBlogPostLayoutCompact>
  </main>
</body>
</html>
